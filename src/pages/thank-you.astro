---
import BaseLayout from "../layouts/BaseLayout.astro";

import { fade } from "astro:transitions";

const pageTitle = "Contact Eetu Rantanen | Web Developer from Tampere";
---

<BaseLayout pageTitle={pageTitle}>
  <div class="section cc-home-header">
    <div
      class="custom-container"
      transition:name="hero"
      transition:animate={fade({ duration: "0.4s" })}
    >
      <div class="row row-justify-center">
        <div class="col col-lg-8 col-md-12">
          <div class="u-text-center u-mb-3">
            <h1 class="h2" transition:name="hero-title">Thank you!</h1>
          </div>
          <div class="blog-content-wrapper">
            <p transition:name="hero-desc" class="u-text-center">
              Thank you for contacting! I will get back to you as soon as
              possible! ü§ù
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
