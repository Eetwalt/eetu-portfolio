---
import "../styles/normalize.css";
import "../styles/webflow.css";
import "../styles/base.css";
import "../styles/splide-default.min.css"
import { ViewTransitions } from "astro:transitions";
import Navigation from "../components/Navigation.svelte";
import Footer from "../components/Footer.astro";

const { pageTitle, bodyClass} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{pageTitle}</title>
    <meta content="width=device-width, initial-scale=1" name="viewport" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:locale" content="en_GB" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Web Developer Portfolio of Eetu Rantanen Tampere Finland" />
    <meta property="og:description" content="Explore my Web Development portfolio site with case studies, information about me and a micro-blog!" />
    <meta property="og:url" content="https://www.eeturantanen.dev/" />
    <meta property="og:site_name" content="Eetu Rantanen Web Developer Portfolio Website" />
    <meta property="og:image" content="https://qixapdjpuoidwayatqcl.supabase.co/storage/v1/object/public/images/EetuRantanenWebDeveloper.webp?t=2023-10-10T19%3A41%3A00.277Z" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:type" content="image/webp" />
    <link href="images/black-icon-ICO.png" rel="shortcut icon" type="image/x-icon" />
    <link href="images/webclip-er.png" rel="apple-touch-icon" />
    <ViewTransitions />
  </head>
  <body style=`${bodyClass}`>
    <Navigation client:only />
    <div class="page-wrapper cc-light" style="min-height: 77vh;">
      <slot />
    </div>
    <Footer />
  </body>
</html>
